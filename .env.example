# ============================================
# Copy this file to .env.local and fill in your values.
# Do NOT commit .env.local to source control.

# ---------- Backend API ----------

# API server port
API_PORT=4000

# Allowed CORS origins for direct API access (comma separated)
CORS_ORIGIN=http://localhost:3000

# Session lifetime in minutes
SESSION_TTL_MINUTES=480

# Session store persistence file
SESSION_STORE_FILE=.session-store.json

# SHA-256 hash of the login password
# Generate with: echo -n "tu_password" | shasum -a 256
AUTH_PASSWORD_HASH=4883780c0dc9b9492eabf07e2c112e171317a4b644fa5b5c9284b613180c632a

# Login protection (brute force)
AUTH_MAX_ATTEMPTS=5
AUTH_WINDOW_MS=600000
AUTH_BLOCK_MS=900000

# Google Gemini API Key (required for AI Assistant)
# Get yours at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model used by backend
GEMINI_MODEL=gemini-3-flash-preview

# AI request guards
AI_RATE_LIMIT=30
AI_RATE_WINDOW_MS=60000
AI_TIMEOUT_MS=15000
AI_MAX_QUESTION_CHARS=1000
AI_MAX_EMPLOYEES=300
AI_MAX_REQUESTS=1000
AI_MAX_FIELD_CHARS=120

# ---------- Frontend ----------

# Optional absolute API URL (leave empty when using Vite proxy)
VITE_API_BASE_URL=

# Vite dev proxy target for /api
VITE_API_PROXY_TARGET=http://localhost:4000
